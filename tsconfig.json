{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "target": "es2019",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["./src/types"]
         
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
